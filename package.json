{
  "name": "@trim21/php-serialize",
  "version": "0.2.2",
  "description": "PHP serialize/deserialize in Javascript",
  "type": "module",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest",
    "lint": "eslint .",
    "format": "prettier -w ./",
    "build": "tsup src/index.ts --keep-names --sourcemap linked --dts --format esm",
    "lint-staged": "lint-staged"
  },
  "repository": "trim21/php-serialize",
  "author": "trim21",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trim21/php-serialize/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "src/*",
    "README.md",
    "dist/*"
  ],
  "homepage": "https://github.com/trim21/php-serialize#readme",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@jest/globals": "^29.7.0",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^22.14.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.29.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "lint-staged": {
    "*.{md,js,cjs,mjs,jsx,ts,tsx,json,yml,yaml}": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@4.8.1",
  "prettier": {
    "semi": false,
    "printWidth": 125,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "coverageProvider": "v8"
  }
}
