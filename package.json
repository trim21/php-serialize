{
  "name": "@trim21/php-serialize",
  "version": "0.1.1",
  "description": "PHP serialize/deserialize in Javascript",
  "main": "dist/index.cjs",
  "types": "dist/types/index.d.ts",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "scripts": {
    "test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest",
    "lint": "eslint .",
    "format": "prettier -w ./",
    "build": "tsup src/index.ts --dts --format esm",
    "lint-staged": "lint-staged"
  },
  "repository": "trim21/php-serialize",
  "author": "trim21",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trim21/php-serialize/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "src/*",
    "README.md",
    "dist/*"
  ],
  "homepage": "https://github.com/trim21/php-serialize#readme",
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@jest/globals": "^29.7.0",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "28.8.3",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tslib": "^2.7.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.1",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "lint-staged": {
    "*.{md,js,cjs,mjs,jsx,ts,tsx,json,yml,yaml}": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@4.5.1",
  "prettier": {
    "semi": false,
    "printWidth": 125,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "coverageProvider": "v8"
  }
}
