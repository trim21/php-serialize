{
  "name": "@trim21/php-serialize",
  "version": "0.1.1",
  "description": "PHP serialize/deserialize in Javascript",
  "main": "dist/index.cjs",
  "types": "dist/types/index.d.ts",
  "module": "dist/index.mjs",
  "sideEffects": false,
  "scripts": {
    "test": "NODE_OPTIONS=\"--no-warnings --experimental-vm-modules\" jest",
    "lint": "eslint --ext ts .",
    "format": "prettier -w ./",
    "build": "rollup -c",
    "lint-staged": "lint-staged"
  },
  "repository": "trim21/php-serialize",
  "author": "trim21",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trim21/php-serialize/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "package.json",
    "src/*",
    "README.md",
    "dist/*"
  ],
  "homepage": "https://github.com/trim21/php-serialize#readme",
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@rollup/plugin-typescript": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1",
    "rollup": "^3.27.2",
    "rollup-plugin-delete": "^2.0.0",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 16"
  },
  "lint-staged": {
    "*.{md,js,cjs,mjs,jsx,ts,tsx,json,yml,yaml}": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@3.6.1",
  "prettier": {
    "semi": false,
    "printWidth": 125,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "coverageProvider": "v8"
  },
  "eslintIgnore": [
    "lib",
    "node_modules",
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "standard-with-typescript",
      "prettier"
    ],
    "ignorePatterns": [
      "*.test.ts",
      "*.config.ts",
      "**/test/**"
    ],
    "rules": {
      "camelcase": "off",
      "prettier/prettier": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "import/extensions": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/prefer-nullish-coalescing": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/member-delimiter-style": "off"
    },
    "parserOptions": {
      "sourceType": "module",
      "project": "./tsconfig.json"
    }
  }
}
