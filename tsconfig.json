{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2022"]
  },
  "exclude": ["node_modules", "lib", "dist", "public"]
}
