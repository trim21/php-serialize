{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["ES2022"]
  },
  "exclude": ["node_modules", "lib", "dist", "public"]
}
