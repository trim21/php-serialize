{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ES2022",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["ES2022"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules", "public"
  ]
}
